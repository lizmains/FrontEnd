                HorizontalOptions="Center" 
            VerticalOptions="Center"/>-->
        <Label
            x:Name="ConDev"
            Text="{Binding devName}"
            HorizontalOptions="End"></Label>
        <Button 
            x:Name="DiscBtn"
            Text="Disconnect"
            SemanticProperties.Hint="Disconnect from connected device"
            Clicked="OnDisconnect"
            HorizontalOptions="End" />

        <!--<Label x:Name="DevEntry"
               Text="{Binding ballwt}"
               SemanticProperties.HeadingLevel="Level2"
               SemanticProperties.Description="Entered Ball Weight"
               FontSize="18"
               HorizontalOptions="Center"
        />-->
        
        <!--<Button 
            x:Name="ScanBtn"
            Text="Scan"
            SemanticProperties.Hint="Navigate to main page when you click"
            Clicked="ScanClicked"
            HorizontalOptions="Center" />-->

        <!--<Entry x:Name="weight"
               Placeholder="Enter Ball Weight"
               TextChanged="OnDevChanged"
               Completed="OnDevEnter"
        />--> <!-- Keyboard="Numeric" Displays numeric keyboard on mobile app-->
        
       <!-- <Button 
            x:Name="ConnectBtn"
            Text="Connect"
            SemanticProperties.Hint="Connect To Sim Laptop"
            Clicked="OnDevEnter"
            HorizontalOptions="Center" />-->
        <Button 
            x:Name="ConnectPi"
            Text="Connect to Sim"
            SemanticProperties.Hint="Connect To Sim Pi"
            Clicked="OnPiConnect"
            HorizontalOptions="Center" />
        <!--<Button 
            x:Name="ServBtn"
            Text="Read From Sim"
            SemanticProperties.Hint="Displays device info in console"
            Clicked="getServices"
            HorizontalOptions="Center" />-->
        <Button 
            x:Name="ReadBtn"
            Text="Read Data"
            SemanticProperties.Hint="Displays Sim Values"
            Clicked="ReadSim"
            HorizontalOptions="Center" />
        <Label 
            x:Name="texto"
            Text=" "
            FontSize="24"
            HorizontalOptions="Center">
        </Label>
        <Label
            x:Name="ReadInfo"
            Text="{Binding info}"
            HorizontalOptions="Center"></Label>
        <Label 
            x:Name="blank"
            Text=" "
            FontSize="36"
            HorizontalOptions="Center">
        </Label>
        <Entry x:Name="WriteData"
               Placeholder="Write text to sim"
               TextChanged="OnWriteChanged"
               Completed="OnWriteEnter"
        />
        <Button 
            x:Name="WriteSim"
            Text="Write to Sim"
            SemanticProperties.Hint="Writes to sim"
            Clicked="WriteToSim"
            HorizontalOptions="Center" />
        <!--<Button 
            x:Name="NotifySim"
            Text="Listen to Sim"
            SemanticProperties.Hint="Starts/stops listening to sim"
            Clicked="listen"
            HorizontalOptions="Center" />-->
        
        
        <Label
            x:Name="DevInfo"
            Text="{Binding names}"
            FontSize="18"
            HorizontalOptions="Center"></Label>
        
        <Button 
            x:Name="NextBtn"
            Text="Get Stats"
            SemanticProperties.Hint="Navigate to next page when you click"
            Clicked="OnNextBtnClicked"
            HorizontalOptions="Center" />
        <Button 
            x:Name="HomeBtn"
            Text="Home"
            SemanticProperties.Hint="Navigate to main page when you click"
            Clicked="OnHomeBtnClicked"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>
            <Button
                x:Name="ballBtn"
                Text="Ball Arsenal"
                SemanticProperties.Hint="Navigate to Ball Arsenal Page"
                Clicked="OnBallArsenalBtnClicked"
                HorizontalOptions="Center"/>
            
            <Button
                x:Name="smartDotBtn"
                Text="SmartDot"
                SemanticProperties.Hint="Navigate to SmartDot Page"
                Clicked="OnSmartDotBtnClicked"
                HorizontalOptions="Center"/>

            
